<main> 
 <h3>スケジュール編集</h3>
 
    <%= form_with model: @plan do |f| %>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th><%= f.label :start_date ,"開始日時" %></th>
          <td><%= f.date_field :start_date %></td>
        </tr>
        <tr>
          <th><%= f.label :end_date ,"終了日時" %></th>
          <td><%= f.date_field :end_date %></td>
        </tr>
        <tr>
          <th><%= f.label :all_day ,"終日" %></th>
          <td id="all_day_radio_bottun">
            <%= f.radio_button :all_day, "◯" %>
            <p>終日であればチェック</p>
            <%= f.radio_button :all_day, " " %>
            <p>終日でなければチェック</p>
          </td>
          <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td><%= f.text_field :memo %></td>
        </tr>
        </tr>
      </table>
      <div>
        <ul>
          <li><%= f.submit "編集を完了する" %></li>
          <li><%= link_to "スケジュール一覧に戻る", :plans %></li>
        </ul>
      </div>
    <% end %>
</main>